<ul>
    <li>
      <% customer.forEach((customer, index) => { %>
          <h5>
           Ticket: <%= customer.ticket %></a>
           First Name: <%= customer.firstName %></a>
           Last Name: <%= customer.lastName %></a>
           Phone: <%= customer.phone %></a>
           Email: <%= customer.email %></a>
           Message Count:<%= customer.messageCount%></a>
           <h5>
            <form method="POST" action="/customers/sms/<%= customer.phone %>">
                <input type="submit" value="Send SMS">
              </form>

            <form method="POST" action="/customers/fullfilled/<%= index %>/?_method=DELETE">
                <!-- is there a way to hide customers instead of deleting -->
                <input type="submit" value="Fullfilled"> 
              </form>
      <% }) %>
</li>
</ul>